		<SplitPane dividerPositions="0.18" BorderPane.alignment="CENTER">
			<items>
				<CooTreeViewPnl fx:id="treeViewPnl" />
				<BorderPane>
					<center>
						<TabPane tabClosingPolicy="UNAVAILABLE"
							BorderPane.alignment="CENTER">
							<tabs>
								<Tab text="Stammdaten" >
									<graphic>
										<ImageView pickOnBounds="true" preserveRatio="true">
											<image>
												<Image url="/include/icons/company_icon.png" />
											</image>
										</ImageView>
									</graphic>
									<content>
										<CooCoreDataPnl fx:id="coreDataPnl" />
									</content>
								</Tab>
								<Tab text="Projektdaten" >
									<graphic>
										<ImageView pickOnBounds="true" preserveRatio="true">
											<image>
												<Image url="/include/icons/project.png" />
											</image>
										</ImageView>

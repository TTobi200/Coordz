<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<SplitPane dividerPositions="0.15" orientation="VERTICAL">
			<items>
				<TitledPane text="Stationen">
					<content>
						<BorderPane>
							<center>
								<TableView fx:id="tblStations">
									<columns>
										<TableColumn text="Station">
											<cellValueFactory>
												<PropertyValueFactory property="name" />
											</cellValueFactory>
										</TableColumn>
										<TableColumn text="X-Offset">
											<cellValueFactory>
												<PropertyValueFactory property="xOffset" />
											</cellValueFactory>
										</TableColumn>
										<TableColumn text="Y-Offset">
											<cellValueFactory>
												<PropertyValueFactory property="yOffset" />
											</cellValueFactory>
										</TableColumn>
										<TableColumn text="Z-Offset">
											<cellValueFactory>
												<PropertyValueFactory property="zOffset" />
											</cellValueFactory>
										</TableColumn>
										<TableColumn text="Datei">
											<cellValueFactory>
												<PropertyValueFactory property="file" />
											</cellValueFactory>
										</TableColumn>
									</columns>
								</TableView>
							</center>
						</BorderPane>
					</content>
				</TitledPane>
				<TabPane tabClosingPolicy="UNAVAILABLE">
					<tabs>
						<Tab text="Messpunkte">
							<graphic>
								<ImageView pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="/include/icons/coordinates.png" />
									</image>
								</ImageView>
							</graphic>
						</Tab>
						<Tab text="3D-Ansicht">
							<graphic>
								<ImageView pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="/include/icons/3d.png" />
									</image>
								</ImageView>
							</graphic>
						</Tab>
						<Tab text="Notizen">
							<graphic>
								<ImageView pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="/include/icons/notes.png" />
									</image>
								</ImageView>
							</graphic>
							<content>
								<TextArea>
								</TextArea>
							</content>
						</Tab>
					</tabs>
				</TabPane>
			</items>
		</SplitPane>
	</center>
</fx:root>
